{
  "name": "snobuild",
  "version": "3.5.1",
  "description": "Easy way to use esbuild.",
  "keywords": [
    "cli",
    "esbuild",
    "snobuild"
  ],
  "homepage": "https://github.com/snomiao/snobuild#readme",
  "bugs": {
    "url": "https://github.com/snomiao/snobuild/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snomiao/snobuild.git"
  },
  "license": "MIT",
  "author": "Snowstar Miao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "snobuild": "dist/cli.mjs"
  },
  "directories": {
    "dist": "dist"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx snobuild@3.2.10 && npm link",
    "prepack": "npm run build && npm run test",
    "semantic-release": "semantic-release",
    "test": "dist/cli.mjs --verbose && dist/cli.mjs --verbose",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "prettier -w"
    ]
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "esbuild": "^0.15.9",
    "globby": "^13.1.1",
    "matrix-expand": "1.0.0",
    "snorun": "1.1.17",
    "sort-package-json": "^2.0.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "18.8.3",
    "@types/yargs": "17.0.13",
    "esbuild": "^0.15.9",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.4",
    "semantic-release": "^20.1.0",
    "snobuild": "^3.2.11",
    "typescript": "4.8.4"
  }
}
